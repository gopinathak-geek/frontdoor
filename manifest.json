{
  "manifest_version": 3,
  "name": "Frontdoor",
  "description": "Frontdoor interview task.",
  "version": "1.0",
  "author": "Gopinath Alagar Karunanithi",
  "icons": {
    "16": "images/logo.png",
    "32": "images/logo.png",
    "48": "images/logo.png",
    "128": "images/logo.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": {
      "16": "images/logo.png",
      "32": "images/logo.png",
      "48": "images/logo.png",
      "128": "images/logo.png"
    }
  },
  "permissions": ["activeTab", "scripting", "tabs", "storage"],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "commands": {
    "_execute_action": {
        "suggested_key": {
          "default": "Ctrl+K",
          "mac": "Command+K"
        },
        "description": "execute action"
    }
  }
}
